<div id="header">
  <h1>Academy Voter: <%= voter_name %></h1>
</div>
<div id="container">
  <% if !category.nil? %>
      <form method="post" action="/vote/<%= voter_name %>">

        <h3><%= category %><br/>
          <br/>Nominees:</h3>
        <ul>
          <% nominees.each do |nominee| %>
              <label for="choice-<%= nominee.name %>" onclick="">
                <li><input type="radio" name="choice" id="choice-<%= nominee.name %>" value="<%= nominee.name %>"/><%= nominee.name %></li>
              </label>
          <% end %>
        </ul>
        <input type="hidden" name="category" value="<%= category %>">

        <p>
          <input type="submit" name="Vote" value="Vote and Continue..."/>
        </p>
      </form>
  <% else %>
      <h1>All done.</h1>

      <h3><a href="/viewresults">View Results!</a></h3>
  <% end %>
  <a href="/">Go Home</a>
</div>